{
  "ui_font_weight": 400.0,
  "which_key": {
    "delay_ms": 300,
    "enabled": true,
  },
  "project_panel": {
    "indent_size": 15.0,
    "entry_spacing": "standard",
  },
  "file_finder": {
    "file_icons": true,
  },
  "tab_size": 2,
  "gutter": {
    "min_line_number_digits": 3,
  },
  "buffer_font_size": 13.0,
  "relative_line_numbers": "disabled",
  "ui_font_family": "Adwaita Sans",
  "ui_font_fallbacks": [".ZedSans", ".SystemUIFont"],
  "buffer_line_height": "standard",
  "icon_theme": "Symbols Icon Theme",
  "git": {
    "blame": {
      "show_avatar": false,
    },
    "inline_blame": {
      "enabled": false,
    },
  },
  "cursor_blink": true,
  "bottom_dock_layout": "contained",
  "tabs": {
    "close_position": "left",
    "git_status": false,
    "file_icons": false,
  },
  "title_bar": {
    "show_menus": true,
    "show_sign_in": false,
    "show_user_picture": false,
    "show_project_items": true,
    "show_branch_icon": true,
  },
  "inlay_hints": {
